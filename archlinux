setfont latarcyrheb-sun32.psfu.gz
mount -o remount,size=2G /run/archiso/cowspace
pacman -S git screen
git clone git://github.com/Pednick/archlinux
mkswap /dev/sda2
swapon /dev/sda2
mkfs.ext4 /dev/sda1
mount /dev/sda1 /mnt
pacstrap /mnt base base-devel linux linux-firmware btrfs-progs exfat-utils dhclient dhcpcd nano
genfstab -U /mnt >> /mnt/etc/fstab
arch-chroot /mnt
ln -sf /usr/share/zoneinfo/America/Toronto /etc/localtime
hwclock --systohc
nano /etc/locale.gen Uncomment en_CA.UTF-8 UTF-8
locale-gen
nano /etc/hostname
archlinux
nano /etc/hosts
127.0.0.1	localhost
::1		localhost
127.0.1.1	archlinux.localdomain	archlinux
mkinitcpio -p linux
passwd
pacman -S grub
grub-install /dev/sda
grub-mkconfig -o /boot/grub/grub.cfg
Reboot
localectl set-locale LANG=en_CA.UTF-8
Reboot
systemctl start dhcpcd.service
pacman -S git gpm screen
git clone git://github.com/Pednick/archlinux
useradd -m -G wheel -s /bin/bash lopov
passwd lopov
nano /etc/sudoers
nano /etc/makepkg.conf
nano /etc/pacman.conf
pacman -Sy
pacman -S xorg-server lib32-mesa xf86-video-amdgpu libva-mesa-driver lib32-libva-mesa-driver libva-vdpau-driver mesa-vdpau lib32-mesa-vdpau alsa-utils gst-libav gst-plugins-ugly mpv youtube-dl bijiben gparted bc gnome gnome-extra
systemctl enable NetworkManager
systemctl enable gdm
mv archlinux /home/lopov
Exit and login as user
If there's a problem installing yaourt:
nano /etc.pacman.conf
[archlinuxfr]
SigLevel = Never
Server = http://repo.archlinux.fr/$arch
sudo pacman -S --needed base-devel git wget yajl
git clone https://aur.archlinux.org/package-query.git
cd package-query
makepkg -si
cd ..
git clone https://aur.archlinux.org/yaourt.git
cd yaourt
makepkg -si
cd ..
yaourt google-chrome
yaourt chrome-gnome-shell-git
reboot and done
