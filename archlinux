mount -o remount,size=2G /run/archiso/cowspace
pacman -S git screen
git clone git://github.com/Pednick/archlinux
mkswap /dev/sda2
swapon /dev/sda2
mkfs.ext4 /dev/sda1
mount /dev/sda1 /mnt
pacstrap /mnt base arch-install-scripts b43-fwcutter broadcom-wl btrfs-progs clonezilla crda darkhttpd ddrescue dhclient dhcpcd dialog diffutils dmraid dnsmasq dnsutils dosfstools elinks ethtool exfat-utils f2fs-tools fsarchiver gnu-netcat gpm gptfdisk grml-zsh-config grub hdparm ipw2100-fw ipw2200-fw irssi iwd jfsutils lftp linux-atm linux-firmware lsscsi lvm2 man-db man-pages mc mdadm mtools nano ndisc6 netctl nfs-utils nilfs-utils nmap ntfs-3g ntp openconnect openssh openvpn partclone parted partimage ppp pptpclient refind-efi reiserfsprogs rp-pppoe rsync sdparm sg3_utils smartmontools sudo tcpdump testdisk usb_modeswitch usbutils vi vim-minimal vpnc wget wireless-regdb wireless_tools wpa_supplicant wvdial xfsprogs xl2tpd
genfstab -U /mnt >> /mnt/etc/fstab
arch-chroot /mnt
ln -sf /usr/share/zoneinfo/America/Toronto /etc/localtime
hwclock --systohc
nano /etc/locale.gen Uncomment en_CA.UTF-8 UTF-8
locale-gen
nano /etc/hostname
archlinux
nano /etc/hosts
127.0.0.1	localhost
::1		localhost
127.0.1.1	archlinux.localdomain	archlinux
mkinitcpio -p linux
passwd
pacman -S grub
grub-install /dev/sda
grub-mkconfig -o /boot/grub/grub.cfg
Reboot
localectl set-locale LANG=en_CA.UTF-8
Reboot
systemctl start dhcpcd.service
pacman -S git gpm screen
git clone git://github.com/Pednick/archlinux
useradd -m -G wheel -s /bin/bash lopov
passwd lopov
nano /etc/sudoers
nano /etc/makepkg.conf
nano /etc/pacman.conf
pacman -Sy
pacman -S xorg-server lib32-mesa xf86-video-amdgpu libva-mesa-driver lib32-libva-mesa-driver libva-vdpau-driver mesa-vdpau lib32-mesa-vdpau alsa-utils gst-libav bc gnome gnome-extra
systemctl enable NetworkManager
systemctl enable gdm
mv archlinux /home/lopov
Exit and login as user
git clone https://aur.archlinux.org/package-query.git
cd package-query
makepkg -si
cd ..
git clone https://aur.archlinux.org/yaourt.git
cd yaourt
makepkg -si
cd ..
yaourt google-chrome
yaourt chrome-gnome-shell-git
reboot and done
