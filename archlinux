setfont latarcyrheb-sun32.psfu.gz
mkfs.ext4 /dev/sda1
mount /dev/sda1 /mnt
pacstrap /mnt base base-devel alsa-utils exfatprogs linux linux-firmware nano sudo networkmanager
genfstab -U /mnt >> /mnt/etc/fstab
arch-chroot /mnt
ln -sf /usr/share/zoneinfo/America/Toronto /etc/localtime
hwclock --systohc
timedatectl set-local-rtc 1
nano /etc/locale.gen Uncomment en_CA.UTF-8 UTF-8
locale-gen
nano /etc/hostname
archlinux
nano /etc/hosts
127.0.0.1	localhost
::1		localhost
127.0.1.1	archlinux.localdomain	archlinux
mkinitcpio -p linux
passwd
pacman -S grub
grub-install /dev/sda
grub-mkconfig -o /boot/grub/grub.cfg
systemctl enable NetworkManager
systemctl start NetworkManager
localectl set-locale LANG=en_CA.UTF-8
useradd -m -G wheel -s /bin/bash lopov
passwd lopov
nano /etc/sudoers
nano /etc/makepkg.conf
MAKEFLAGS="-j$(nproc)"
nano /etc/pacman.conf
pacman -Sy
pacman -S xorg-server nvidia lib32-nvidia-utils lib32-mesa libva-mesa-driver lib32-libva-mesa-driver mesa-vdpau lib32-mesa-vdpau vulkan-icd-loader lib32-vulkan-icd-loader gst-libav gst-plugins-ugly mpv pavucontrol gparted xclip bluez bluez-plugins bluez-utils gdm gnome gnome-extra
systemctl enable bluetooth
systemctl enable NetworkManager
systemctl enable gdm
mv archlinux /home/lopov
Exit and login as user
git clone https://aur.archlinux.org/yay.git
cd yay
makepkg -si
cd ..
yay -S google-chrome
yay -S chrome-gnome-shell-git
reboot and done
